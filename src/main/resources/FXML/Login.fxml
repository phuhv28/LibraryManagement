            <Font size="14.0" />
        </font>
    </Text>


    <Line endX="100.0" layoutX="621.0" layoutY="115.0" startX="-100.0" />
   <Label fx:id="errorLabel" layoutX="495.0" layoutY="141.0" text="Label" textFill="WHITE" visible="false">
