            <Cursor fx:constant="TEXT" />
        </cursor>
    </TextField>

    <PasswordField fx:id="pfPassword" layoutX="541.0" layoutY="229.0" prefHeight="37.0" prefWidth="250.0" promptText="Password" style="-fx-font-weight: bold; -fx-background-radius: 10;">
        <font>
            <Font size="14.0" />
        </font>
