            <Image url="@../images/image_iconApp.png" />
        </image>
    </ImageView>

    <TextField fx:id="tfUsername" layoutX="540.0" layoutY="172.0" prefHeight="37.0" prefWidth="250.0" promptText="Username" style="-fx-font-weight: bold; -fx-background-radius: 10;">
